@model PickViewModel

<div class="row">
    <div class="col-lg-12">
        <h3>Matchday @Model.Matchday</h3>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        @Html.EditorFor(m => m.Scheme)
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <table class="table">
            <tr>
                <th>Name</th>
                <th></th>
            </tr>
            @foreach (var item in Model.Players)
            {
                if (item == null)
                {
                    continue;
                }

                <tr data-player="@item.Id">
                    <td>@item.Name</td>
                    <td>
                        <button class="btn" onclick="deletePlayer(@item.Id)">Delete</button>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

@model List<SelectListItem>

<div class="row">
    <div class="col-lg-12">
        <button class="btn btn-primary" onclick="addPlayerShowModal()">Add</button>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <table class="table">
            <tr>
                <th>Name</th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr data-player="@item.Value">
                    <td>@item.Text</td>
                    <td>
                        <button class="btn" onclick="deletePlayer(@item.Value)">Delete</button>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
